# Production Environment Variables for Server
# Copy this to .env and update the values

MONGODB_URI=mongodb+srv://your-mongodb-connection-string
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_for_production
JWT_EXPIRE=7d
NODE_ENV=production
PORT=5000
CLIENT_URL=https://agri-connect-omega.vercel.app

# Email Configuration (for notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@kisaan.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Admin Configuration
ADMIN_EMAIL=admin@kisaan.com
ADMIN_PASSWORD=admin123

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://agri-connect-omega.vercel.app,http://localhost:3000
